<br>
<div class="container">

		<% if current_user %>
		<%= link_to 'Edit', edit_admin_project_path, class: "btn btn-danger" %>
		<%= link_to 'Delete', [:admin, @project], method: :delete, data: { confirm: 'Are you sure to delete project?' }, class: "btn btn-warning" %> 
		<% end %>
		<%= link_to 'Back', root_path, class: "btn btn-info" %>

	<table class="table table-responsive table-hover">
		<tbody>

			<tr>
				<% if @project.image.attached? %>
					<td><%= image_tag @project.image, style: "width: 200px; display: block" %></td>
				<% end %>
			</tr>

			<tr>
		  	<td><strong>Name:</strong></td>
		  	<td><%= @project.name %></td>
		  </tr>

			<tr>
				<td><strong>Description:</strong></td>
				<td><%= @project.documentation %></td>
			</tr>

			<tr>
				<td><strong>Project Cost:</strInfoong></td>
				<td><%= @project.project_cost%></td>
			</tr>

			<tr>
				<td><strong>Time Tracking:</strong></td>
				<td><%= @project.time_tracking %></td>
			</tr>

		</tbody>
	</table>

	<div id = "comment-content">
		<hr>
		
			<% @project.comments.each do |comment| %>
					<%= render 'admin/comments/comment', comment: comment %>
			<% end %>

		<%= render 'admin/comments/form' %>
	</div>
</div> 
