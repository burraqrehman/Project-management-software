<div class="container">

  <h1>Clients</h1>

  <% if user_signed_in? && current_user %>
    <%= link_to 'New Client', new_manager_client_path, class: "btn btn-danger" %>
  <% end %>

  <table class="table table-responsive table-hover table-strips">
    <thead>
      <tr>
        <th scope="row">Name</th>
        <th scope="row">Profession</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @clients.each do |client| %>
        <tr>
          <td><%= client.name %></td>
          <td><%= client.profession %></td>
          <td><%= link_to 'Show Client', [:manager, client], class: "btn btn-dark" %></td>
          <td><%= link_to 'Projects', manager_client_projects_path(client, @project), class: "btn btn-secondary" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
