<br>
<div class="container">

  <h1 class="text-center">Project Management Software!</h1>
  <br>

  <%= link_to 'Back', manager_clients_path(@manager, @client, @project), class: "btn btn-dark btn-sm" %>
  <% if user_signed_in? && current_user %>
  <%= link_to 'New Project', new_manager_client_project_path(@client, @projects), class: "btn btn-success index btn-sm" %>
  <% end %><br><br><hr>

  <table class="table table-responsive table-hover">
    <thead style= "background-color:#add8e6">
      <tr>
        <th scope="row">Name </th>
        <th scope="row">Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @projects.each do |project| %>
      <tr>
        <td><h5><%= project.name %></h5></td>
        <td><%= project.documentation %></td>
        <% if @client.projects.present? && user_signed_in? && current_user %>
          <td><%= link_to 'Edit', edit_manager_client_project_path(@client, project), class: "btn btn-warning btn-sm" %></td>
          <td><%= link_to 'Delete', [:manager, @client, project], method: :delete, data: { confirm: 'Are you sure to delete project?' }, class: "btn btn-danger btn-sm" %></td>
        <% end %>
        <td><%= link_to 'Show Project', manager_client_project_path(@client, project), class: "btn btn-primary btn-sm" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
 
